<store>
  @type loki
  url "{{ LOKI_URL }}"
{% if LOKI_USERNAME is defined %}
  username "{{ LOKI_USERNAME }}"
{% endif %}
{% if LOKI_PASSWORD is defined %}
  password "{{ LOKI_PASSWORD }}"
{% endif %}
  <label>
    chain
    hostname
    app syslog_identifier
  </label>
  remove_keys "transport,syslog_facility,cap_effective,systemd_cgroup,systemd_slice,systemd_invocation_id,boot_id,machine_id,time"
  line_format "json"
  <buffer>
    flush_interval 10s
    flush_at_shutdown true
    buffer_chunk_limit 1m
  </buffer>
</store>
