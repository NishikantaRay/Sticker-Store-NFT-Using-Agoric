{
  "name": "@agoric/swingset-vat",
  "version": "0.23.0",
  "description": "Vat/Container Launcher",
  "type": "module",
  "main": "src/index.js",
  "engines": {
    "node": ">=11.0"
  },
  "bin": {
    "vat": "bin/vat"
  },
  "scripts": {
    "build": "exit 0",
    "test": "ava",
    "test:xs": "SWINGSET_WORKER_TYPE=xs-worker ava",
    "test:xs-worker": "ava test/workers/test-worker.js -m 'xs vat manager'",
    "pretty-fix": "prettier --write '**/*.js'",
    "pretty-check": "prettier --check '**/*.js'",
    "lint-fix": "yarn lint:eslint --fix && yarn lint:types",
    "lint-check": "yarn lint",
    "lint": "yarn lint:types&&yarn lint:eslint",
    "lint:types": "tsc -p jsconfig.json",
    "lint:eslint": "eslint '**/*.js'"
  },
  "devDependencies": {
    "@endo/ses-ava": "^0.2.8",
    "@types/tmp": "^0.2.0",
    "ava": "^3.12.1",
    "tmp": "^0.2.1"
  },
  "dependencies": {
    "@agoric/assert": "^0.3.14",
    "@agoric/babel-standalone": "^7.14.3",
    "@agoric/bundle-source": "^2.0.0",
    "@agoric/captp": "^1.10.6",
    "@agoric/eventual-send": "^0.13.30",
    "@agoric/import-bundle": "^0.2.31",
    "@agoric/install-ses": "^0.5.28",
    "@agoric/marshal": "^0.4.28",
    "@agoric/nat": "^4.1.0",
    "@agoric/notifier": "^0.3.31",
    "@agoric/promise-kit": "^0.2.28",
    "@agoric/store": "^0.6.6",
    "@agoric/swing-store": "^0.6.2",
    "@agoric/xsnap": "^0.10.0",
    "@endo/base64": "^0.2.8",
    "anylogger": "^0.21.0",
    "import-meta-resolve": "^1.1.1",
    "node-lmdb": "^0.9.5",
    "re2": "^1.16.0",
    "semver": "^6.3.0",
    "ses": "^0.14.3"
  },
  "files": [
    "bin/vat",
    "src/**/*.js",
    "exported.js",
    "tools"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Agoric/agoric-sdk.git"
  },
  "author": "Agoric",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Agoric/agoric-sdk/issues"
  },
  "homepage": "https://github.com/Agoric/agoric-sdk#readme",
  "directories": {
    "example": "examples"
  },
  "eslintConfig": {
    "extends": [
      "@agoric"
    ]
  },
  "ava": {
    "files": [
      "test/**/test-*.js"
    ],
    "timeout": "20m"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "publishConfig": {
    "access": "public"
  }
}
